{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=QuickcrateDB;Trusted_Connection=true;TrustServerCertificate=true;MultipleActiveResultSets=true"
  },
  "Jwt": {
    "Key": "your-super-secret-key-here-at-least-256-bits-long-for-security",
    "Issuer": "https://localhost:7270",
    "Audience": "https://localhost:7270",
    "ExpiryInMinutes": 60,
    "RefreshTokenExpiryInDays": 7
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "MerchantService": "Information"
    }
  },
  "AllowedHosts": "*",
  "CORS": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://localhost:3001"
    ]
  },
  "Cache": {
    "DefaultExpirationMinutes": 30,
    "CategoryCacheExpirationMinutes": 60
  },
  "Api": {
    "RateLimiting": {
      "RequestsPerMinute": 100,
      "BurstSize": 20
    },
    "Pagination": {
      "DefaultPageSize": 20,
      "MaxPageSize": 100
    }
  },
  "FileUpload": {
    "MaxFileSizeInMB": 10,
    "AllowedImageExtensions": [".jpg", ".jpeg", ".png", ".gif", ".webp"],
    "AllowedDocumentExtensions": [".pdf", ".doc", ".docx", ".txt"],
    "UploadPath": "uploads/",
    "ImageUploadPath": "uploads/images/",
    "DocumentUploadPath": "uploads/documents/"
  },
  "Email": {
    "SmtpServer": "smtp.gmail.com",
    "SmtpPort": 587,
    "SmtpUsername": "",
    "SmtpPassword": "",
    "FromEmail": "noreply@quickcrate.com",
    "FromName": "Quickcrate"
  },
  "BusinessRules": {
    "Categories": {
      "MaxHierarchyLevels": 3,
      "MaxCategoriesPerMerchant": 1000,
      "MaxSubCategoriesPerCategory": 100,
      "MaxSubSubCategoriesPerSubCategory": 50,
      "MinNameLength": 2,
      "MaxNameLength": 255,
      "MaxDescriptionLength": 1000
    },
    "Products": {
      "MaxProductsPerMerchant": 10000,
      "MaxImagesPerProduct": 10,
      "MinPrice": 0.01,
      "MaxPrice": 1000000,
      "MaxStockQuantity": 999999
    },
    "Merchants": {
      "MaxBusinessNameLength": 255,
      "RequiredVerificationDocuments": ["business_license", "tax_certificate"],
      "DefaultSubscriptionPlan": "basic",
      "DefaultCurrency": "USD",
      "DefaultLanguage": "en"
    }
  }
}